---
import Section from './Section.astro';
import {certificates} from '@cv';
---
<Section title="Certificates">
    <ul>
        {
            certificates.map(({ name, date, issuer }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <p>{issuer}</p>
                                </div>
                                <time>{date}</time>
                            </header>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>
<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;

    }
    article h3{
        font-weight: 500;
        color: #111;

    }
    article h4{
        color: #222;
        font-weight: 400;
        
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #888;
        font-size: 0.85rem;
    }
    @media (prefers-color-scheme: dark){
        article h3{
            color: #fff;
        }
        article h4{
            color: #ddd;
        }
        time {
            color: #aaa;
        }
    }
</style>